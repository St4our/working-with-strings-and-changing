        break

#5
def k():
    s1=str(input("Введите строку  "))
    simvol=str(input("Какое слово ищем? "))
    zamena=str(input("на что меняем? "))
    print(s1.replace(simvol,zamena))
  
k()
while True:
    f=input("Продолжить [y/n]? ")
    if f=="y":
        k()
    else:
        break
